{
    "compilerOptions": {
      "target": "ES2020",  
      "module": "commonjs",
      "declaration": true, 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "noEmit": false, 
      "rootDir": ".", 
      "outDir": "../../dist/step"
    },
    "include": ["./lib/**/*.ts"]
  }
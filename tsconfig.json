{
    "compilerOptions": {
      "target": "ES2020",  
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "noEmit": true, 
      "rootDir": "./packages"
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules"]
  }
